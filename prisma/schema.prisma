generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  fullName  String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  pets      Pet[]
}

model Pet {
  id        String   @id @default(uuid())
  name      String
  dob       DateTime
  weight    Float
  type      PetType
  breed     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    String
}

enum PetType {
  DOG
  CAT
  OTHER
}
